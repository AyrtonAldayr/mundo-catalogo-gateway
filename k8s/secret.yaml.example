# Example Secret for JWT / sensitive config. Do NOT commit real values.
# Copy to secret.yaml, fill in base64-encoded values, then: kubectl apply -f k8s/secret.yaml
# Encode: echo -n 'your-value' | base64
---
apiVersion: v1
kind: Secret
metadata:
  name: mundo-catalogo-gateway-secrets
  labels:
    app: mundo-catalogo-gateway
type: Opaque
data:
  # Optional: JWT issuer URI (base64). Decode in app via SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI
  # JWT_ISSUER_URI: <base64-encoded-issuer-uri>
  # Or JWK Set URI:
  # JWT_JWK_SET_URI: <base64-encoded-jwk-set-uri>
